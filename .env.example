# Database Configuration
DATABASE_URL="./data/app.db"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-jwt-secret-key-change-this-in-production"

# Bitwarden Configuration (Optional)
BITWARDEN_SERVER_URL="https://vault.bitwarden.com"
BITWARDEN_CLI_TIMEOUT=30000

# Application Configuration
NODE_ENV="development"
LOG_LEVEL="info"

# Docker MCP Configuration
DOCKER_MCP_TIMEOUT=30000
DOCKER_MCP_MAX_RETRIES=3

# Server Configuration
PORT=3000

# Security Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Session Configuration
SESSION_MAX_AGE=2592000  # 30 days in seconds
SESSION_UPDATE_AGE=86400 # 24 hours in seconds