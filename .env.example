# Docker MCP Web Manager 環境設定
# このファイルを .env にコピーして使用してください

# Next.js設定
NODE_ENV=production
PORT=3000

# NextAuth.js設定
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# データベース設定
DATABASE_URL=file:/app/data/app.db
DATA_PATH=./data

# Docker MCP Gateway設定
MCP_GATEWAY_URL=http://localhost:8080
MCP_GATEWAY_API_KEY=your-mcp-gateway-api-key

# ログ設定
LOG_LEVEL=info

# セキュリティ設定
SECURITY_HEADERS_ENABLED=true

# Content Security Policy設定
CSP_SCRIPT_SRC='self' 'unsafe-inline'
CSP_STYLE_SRC='self' 'unsafe-inline'

# Rate Limiting設定（将来の機能）
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_IP=100
RATE_LIMIT_PER_USER=200

# Bitwarden CLI設定（オプション）
# BITWARDEN_CLI_ENABLED=false
# BITWARDEN_SERVER_URL=https://vault.bitwarden.com

# 開発時のみ使用
# NEXT_PUBLIC_DEV_MODE=false